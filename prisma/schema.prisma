generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  name      String?
  email     String  @unique
  password  String?
  role      Role    @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model SecurityLog {
  id        Int      @id @default(autoincrement())
  type      String
  message   String
  count     Int      @default(1)
  timestamp DateTime @default(now())
}